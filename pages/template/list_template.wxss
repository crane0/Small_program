/* pages/list_template/list_template.wxss */
.template-container {
  display: flex;
  flex-direction: column;
  border-top: 1px solid #999;
}
.image-text image{
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
  vertical-align: middle;
}
.image-text text{
  font-size: 32rpx;
  vertical-align: middle;
}
.itemTitle {
  margin: 0 0 20rpx 20rpx;
  font-weight: 700;
}
.itemImg {
  height: 400rpx;
}
.itemContent {
  font-size: 32rpx;
  vertical-align: middle;
  margin: 0 20rpx;
  text-indent: 32rpx;
}
.love-read image{
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
  vertical-align: middle;
}
.love-read text{
  font-size: 32rpx;
  vertical-align: middle;
}